Screen:


    MDCard:
        size_hint : None, None
        size : 300, 400
        pos_hint : {"center_x": 0.5, "center_y": 0.5}
        elevation : 10
        padding : 25
        spacing : 25

        orientation : 'vertical'

        MDLabel:
            id : login
            text : "Connexion"
            font_size: 40
            halign : 'center'
            size_hint_y : None
            height : self.texture_size[1]
            padding_y : 15

        MDTextFieldRound:
            id : utilisateur
            hint_text : "nom d'utilisateur"
            icon_right : "account"
            size_hint_x : None
            width : 200
            font_size : 18
            pos_hint : {"center_x":.5}
            normal_color : app.theme_cls.primary_color

        MDTextFieldRound:
            id : password
            hint_text : "mot de passe"
            icon_right : "eye-off"
            size_hint_x : None
            width : 200
            font_size : 18
            pos_hint : {"center_x":.5}
            password : False

        MDRoundFlatButton:
            text : "Se Connecter"
            font_size : 12
            pos_hint : {"center_x":.5}
            on_press: app.clear()
        
        MDLabel:
            text : "Mot de passe oubli√©e"
            font_size: 12
            halign : 'center'
            size_hint_x : None
            pos_hint : {"center_x":.5}

        
        MDRoundFlatButton:
            text : "S'inscrire"
            font_size : 12
            pos_hint : {"center_x":.5}
                
